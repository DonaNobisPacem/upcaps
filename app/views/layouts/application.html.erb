<!DOCTYPE html>
<html>
	<head>
		<title>UP CAPS</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		
		<%= render 'shared/navigation' %>
		
		<div id="main-container" class="container-fluid">
			<div class="row">
				<% if user_signed_in? %>
					<div class="col-xs-2" style="background-color:blue;">
						<%= render 'shared/leftsidebar'%>
					</div>
					<div class="col-xs-10" style="background-color:pink;">
						<div class="col-xs-1" style="background-color:green;">
						green
						</div>
						<div class="col-xs-10">
							<% flash.each do |name, msg| -%>
								<% if user_signed_in? %>
				            		<%= content_tag :div, msg, class: "alert alert-#{name}" %>
				            	<% end %>
				         	<% end %>

							<%= yield %>
						</div>
						<div class="col-xs-1" style="background-color:green;">
						green
						</div>
					</div>
				<% else %>
					<div class="col-xs-2">
					</div>
					<div class="col-xs-8">
						<% flash.each do |name, msg| -%>
							<% if user_signed_in? %>
			            		<%= content_tag :div, msg, class: "alert alert-#{name}" %>
			            	<% end %>
			         	<% end -%>

						<%= yield %>
					</div>
					<div class="col-xs-2">
					</div>
				<% end %>
			</div>
		</div>
	</body>
</html>
